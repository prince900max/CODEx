    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        if (firstName.getText().isEmpty() )
        {
            JOptionPane.showMessageDialog( null,"Enter your firstname");
        }
        else if(lastName.getText().isEmpty())
        {
            JOptionPane.showMessageDialog(null, "Enter your lastname");
        }
        else if (gender.getSelectedItem().equals("GENDER"))
        {
         JOptionPane.showMessageDialog(null, "select your gender");
        }
        else if(course.getSelectedItem().equals("SELECT_COURSE"))
        {
            JOptionPane.showMessageDialog(null, "Enter your course");            
        }
        else if (amountPaid.getText().isEmpty())
        {
            JOptionPane.showMessageDialog(null,"Enter the amount paid");
        }
        else if (phoneNumber.getText().isEmpty())
        {
            JOptionPane.showMessageDialog(null, "Enter your phone number");
        }
        else if (address.getText().isEmpty())
        {
            JOptionPane.showMessageDialog(null, "Enter your address");
        }
        else if (email2.getText().isEmpty())
        {
            JOptionPane.showMessageDialog(null, "Enter your Email");
        }
        else

         try{

            String query ="INSERT INTO `my_java_app`(`firstNmae`, `lastNmae`, `gender`, `course`, `amountPaid`, `phoneNumber`, `address`, `email`) VALUES (?, ?, ?, ?, ?, ?, ?, ?)";

            con = DriverManager.getConnection("jdbc:mysql://localhost:3306/myapplication","root", "123456");
            pst = con.prepareStatement(query);
            pst.setString(1, firstName.getText());
            pst.setString(2, lastName.getText());
            pst.setString(3, (String) gender.getSelectedItem());
            pst.setString(4, (String)course.getSelectedItem());
            pst.setString(5, amountPaid.getText());
            pst.setString(6, phoneNumber.getText());
            pst.setString(7, address.getText());
            pst.setString (8, email2.getText());
            
            int rowsInserted = pst.executeUpdate();
            
            firstName.setText("");
            lastName.setText("");
            gender.setSelectedItem("GENDER");
            course.setSelectedItem("SELECT_COURSE");
            amountPaid.setText("");
            phoneNumber.setText("");
            address.setText("");
            email2.setText("");
            
            
            if (rowsInserted > 0) {
                JOptionPane.showMessageDialog(null, " Registration Succesful!");
            } else {
                JOptionPane.showMessageDialog(null, "Failed to register student.");
            }

        }catch(Exception e){
            JOptionPane.showMessageDialog( null,"Error: " + e.getMessage());
        }

    }                                        

